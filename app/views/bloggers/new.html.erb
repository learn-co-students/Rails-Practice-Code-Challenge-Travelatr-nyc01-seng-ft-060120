<h1>Create A Blogger</h1>

<div class='error'>
  <% if flash[:my_errors] %>
    <% flash[:my_errors].each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>
</div>


<%= form_for(@blogger) do |f|%>
    <%= f.label :name%>
    <%= f.text_field :name%>

    <%= f.label :bio%>
    <%= f.text_field :bio%>

    <%= f.label :age%>
    <%= f.number_field :age%>

    <%= f.submit %>

<% end %>